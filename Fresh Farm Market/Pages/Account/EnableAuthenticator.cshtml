@page
@model Fresh_Farm_Market.Pages.Account.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Enable Authenticator";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h4>Enable Authenticator</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Code"></label>
                <input asp-for="Input.Code" class="form-control" />
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Verify</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>Authenticator App</h4>
        <p>Scan the QR code with your authenticator app.</p>
        <div>
            <img src="data:image/png;base64,@Model.AuthenticatorUri" />
        </div>
        <p>Or enter this key manually: <code>@Model.SharedKey</code></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
