@page
@model Fresh_Farm_Market.Pages.UserDetailsModel
@{
    ViewData["Title"] = "User Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card" style="max-width: 400px; margin: 0 auto;">
    <div class="card-body">
        <div class="text-center">
            @if (!string.IsNullOrEmpty(Model.UserViewModel.Photo))
            {
                <img src="@Model.UserViewModel.Photo" alt="Profile Photo" class="img-thumbnail" style="width: 150px; height: 150px;" />
            }
        </div>
        <h2 class="card-title mt-3">@Model.UserViewModel.FullName</h2>
        <p class="card-text"><strong>Email:</strong> @Model.UserViewModel.Email</p>
        <p class="card-text"><strong>Credit Card Number:</strong> @Model.UserViewModel.CreditCardNo</p>
        <p class="card-text"><strong>Gender:</strong> @Model.UserViewModel.Gender</p>
        <p class="card-text"><strong>Mobile Number:</strong> @Model.UserViewModel.MobileNo</p>
        <p class="card-text"><strong>Delivery Address:</strong> @Model.UserViewModel.DeliveryAddress</p>
        <p class="card-text"><strong>About Me:</strong> @Model.UserViewModel.AboutMe</p>
    </div>
</div>
