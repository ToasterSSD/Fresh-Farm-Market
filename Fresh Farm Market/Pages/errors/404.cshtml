@page
@model Fresh_Farm_Market.Pages.errors.custom404Model
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="error-container">
    <h1>Page Not Found</h1>
    <p>Sorry, the page you are looking for does not exist.</p>
    <a class="btn btn-primary" asp-page="/Index">Go to Home Page</a>
</div>

<style>
    .error-container {
        text-align: center;
        margin-top: 50px;
    }

        .error-container h1 {
            font-size: 3rem;
            color: #dc3545;
        }

        .error-container p {
            font-size: 1.25rem;
            margin-bottom: 20px;
        }

        .error-container .btn {
            font-size: 1.1rem;
            padding: 10px 20px;
        }
</style>
