@page
@model Fresh_Farm_Market.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2 class="text-center mb-4">Profile</h2>

<div class="form-container">
    <form method="post" id="profileForm">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Input.FullName">Full Name</label>
            <input asp-for="Input.FullName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Input.MobileNo">Mobile Number</label>
            <input asp-for="Input.MobileNo" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Input.DeliveryAddress">Delivery Address</label>
            <textarea asp-for="Input.DeliveryAddress" class="form-control" readonly></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Input.AboutMe">About Me</label>
            <textarea asp-for="Input.AboutMe" class="form-control" readonly></textarea>
        </div>

        <a asp-page="/ChangePassword" class="btn btn-primary">Change Password</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 1.1rem;
        margin-top: 20px;
    }
</style>

